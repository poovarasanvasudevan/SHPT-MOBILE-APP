<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/md_white_1000"
              android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/videoLayout"
                    android:visibility="gone"
                    android:layout_height="wrap_content">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:layout_height="242dp">
                    <com.afollestad.easyvideoplayer.EasyVideoPlayer
                            android:layout_width="match_parent"
                            android:id="@+id/teaserVideo"
                            app:evp_autoPlay="false"
                            app:evp_disableControls="true"
                            android:layout_height="192dp"/>


                    <RelativeLayout android:layout_width="match_parent"
                                    android:layout_alignParentBottom="true"
                                    android:layout_below="@+id/teaserVideo"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="match_parent">

                        <in.shpt.widget.Ripple
                                android:layout_width="wrap_content"
                                android:id="@+id/playpauseButton"
                                android:layout_alignParentLeft="true"
                                android:layout_height="match_parent">

                            <com.mikepenz.iconics.view.IconicsImageView
                                    android:layout_width="50dp"
                                    android:id="@+id/playpauseButtonIcon"
                                    app:iiv_background_color="@color/md_white_1000"
                                    app:iiv_color="?colorPrimary"
                                    app:iiv_icon="{faw_play}"
                                    android:layout_height="match_parent"/>
                        </in.shpt.widget.Ripple>

                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_centerVertical="true"
                                      android:orientation="vertical"
                                      android:layout_toRightOf="@+id/playpauseButton"
                                      android:layout_toLeftOf="@+id/fullScreenButton"
                                      android:layout_height="wrap_content">
                            <android.support.v7.widget.AppCompatSeekBar
                                    android:layout_width="match_parent"
                                    android:id="@+id/seekbarvideo"
                                    android:layout_height="wrap_content"/>

                            <TextView android:layout_width="wrap_content"
                                      android:text="0.00 / 0.00"
                                      android:id="@+id/durationOfTime"
                                      style="@style/Base.TextAppearance.AppCompat.Body2"
                                      android:textSize="9dp"
                                      android:layout_marginRight="10dp"
                                      android:layout_gravity="right"
                                      android:layout_height="wrap_content"/>
                        </LinearLayout>


                        <in.shpt.widget.Ripple
                                android:layout_width="wrap_content"
                                android:id="@+id/fullScreenButton"
                                android:layout_alignParentRight="true"
                                android:layout_height="match_parent">

                            <com.mikepenz.iconics.view.IconicsImageView
                                    android:layout_width="50dp"
                                    android:id="@+id/fullScreenButtonIcon"
                                    app:iiv_background_color="@color/md_white_1000"
                                    app:iiv_color="?colorPrimary"
                                    app:iiv_icon="{faw_arrows_alt}"
                                    android:layout_height="match_parent"/>
                        </in.shpt.widget.Ripple>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout android:layout_width="match_parent"
                          android:background="@color/md_white_1000"
                          android:id="@+id/descLayout"
                          android:orientation="vertical"
                          android:layout_height="match_parent">

                <WebView android:layout_width="match_parent"
                         android:id="@+id/descWeb"
                         android:layout_margin="5dp"
                         android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>