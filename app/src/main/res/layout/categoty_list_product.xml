<?xml version="1.0" encoding="utf-8"?>
<in.shpt.widget.Ripple xmlns:android="http://schemas.android.com/apk/res/android"
                       xmlns:app="http://schemas.android.com/apk/res-auto"
                       android:layout_width="match_parent"
                       android:layout_height="150dp"
                       android:id="@+id/productBannerLayout"
                       app:mrl_rippleColor="@color/md_grey_500"
                       app:mrl_rippleOverlay="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_white_1000"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="5"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/productName"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical"
                    android:text="This is Product Name"
                    android:textSize="20dp"/>

            <TextView
                    android:id="@+id/productPrice"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="This is Product Price"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/productShortDescription"
                    style="@style/TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="This is Product Short desc"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tagLayout"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"></LinearLayout>

        </LinearLayout>
    </LinearLayout>
</in.shpt.widget.Ripple>