<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

    <in.shpt.widget.Ripple
            android:layout_width="match_parent"
            app:mrl_rippleColor="@color/md_grey_500"
            app:mrl_rippleOverlay="true"
            android:id="@+id/cartProductItem"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

            <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="match_parent"
                    android:layout_weight="7"
                    app:iiv_color="?colorPrimary"
                    app:iiv_icon="{faw-gift}"
                    app:iiv_size="20dp"
                    android:layout_height="match_parent"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="2"
                    android:layout_marginLeft="3dp"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:orientation="horizontal"
                        android:layout_above="@+id/cartDetailPanel"
                        android:layout_height="match_parent">

                    <TextView
                            android:layout_width="match_parent"
                            android:textSize="18dp"
                            android:text="ProductName"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_weight="1"
                            android:id="@+id/shoppingCartProductName"
                            android:layout_height="wrap_content"/>

                    <in.shpt.widget.Ripple
                            android:layout_width="match_parent"
                            android:layout_weight="7"
                            android:layout_marginTop="5dp"
                            app:mrl_rippleColor="@color/md_grey_500"
                            app:mrl_rippleOverlay="true"
                            android:layout_height="wrap_content">

                        <ImageButton
                                android:layout_width="match_parent"
                                android:background="@color/md_white_1000"
                                android:id="@+id/overflowIcon"
                                android:layout_height="wrap_content"/>
                    </in.shpt.widget.Ripple>

                </LinearLayout>


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:id="@+id/cartDetailPanel"
                        android:layout_alignParentBottom="true"
                        android:layout_height="wrap_content">


                    <TextView
                            android:layout_width="wrap_content"
                            android:text="Quantity"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            android:textColor="@color/md_green_700"
                            android:id="@+id/shoppingCartProductPrice"
                            android:layout_alignParentRight="true"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </in.shpt.widget.Ripple>
</android.support.v7.widget.CardView>