<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <in.shpt.widget.ProgressWheel
            android:layout_width="40dp"
            app:matProg_barWidth="3dp"
            app:matProg_progressIndeterminate="true"
            app:matProg_barColor="?colorPrimary"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/progress"
            android:layout_height="40dp"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <in.shpt.widget.Ripple
                            android:layout_width="match_parent"
                            app:mrl_rippleColor="@color/md_green_700"
                            app:mrl_rippleOverlay="true"
                            android:layout_margin="15dp"
                            android:id="@+id/newAddress"
                            android:layout_height="wrap_content">

                        <Button
                                android:layout_width="match_parent"
                                android:text="Add Address"
                                style="@style/GreenButton"
                                android:layout_height="wrap_content"/>
                    </in.shpt.widget.Ripple>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_below="@+id/newAddress"
                            android:id="@+id/addressLayout"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">

                    </LinearLayout>



                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>